{
  "compilerOptions": {
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowImportingTsExtensions": true,
    "emitDeclarationOnly": true,
    "composite": true,
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "rootDir": ".",
    "baseUrl": ".",
    "lib": [
      "esnext"
    ],
    "skipLibCheck": true,
    "strict": true
  },
  "include": [
    "*.json",
    "config/**/*",
    "core/**/*",
    "scripts/*.ts",
    "test/**.test.ts",
    "vitest.config.ts",
    "web/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "ts-node": {
    "esm": true,
    "files": true
  }
}
