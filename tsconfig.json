{
  "compilerOptions": {
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowImportingTsExtensions": true,
    "emitDeclarationOnly": true,
    "composite": true,
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "rootDir": ".",
    "baseUrl": ".",
    "lib": ["esnext"],
    "skipLibCheck": true,
    "strict": true,
    "paths": {
      "@core/*": ["./core/*"],
      "@comp/*": ["./core/components/*"],
      "@amos/*": ["./core/plugins/amos/*"],
      "@hutao/*": ["./core/plugins/hutao/*"],
      "@yatta/*": ["./core/plugins/yatta/*"],
      "@utils/*": ["./core/utils/*"],
      "@tools/*": ["./core/tools/*"]
    }
  },
  "include": [
    "*.json",
    "config/**/*",
    "core/**/*",
    "scripts/*.ts",
    "test/**.test.ts",
    "vitest.config.ts",
    "web/**/*.ts"
  ],
  "exclude": ["node_modules", ".github"],
  "ts-node": {"esm": true, "files": true}
}
