{
  "compilerOptions": {
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowImportingTsExtensions": true,
    "emitDeclarationOnly": true,
    "composite": true,
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "node",
    "rootDir": ".",
    "baseUrl": ".",
    "lib": ["esnext"],
    "skipLibCheck": true,
    "strict": true
  },
  "include": ["*.json", "config/**/*", "core/**/*"],
  "exclude": ["node_modules"],
  "ts-node": {
    "esm": true,
    "files": true
  }
}
