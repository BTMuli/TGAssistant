{
  "name": "tg-assistant",
  "version": "2.2.0",
  "description": "The assistant for TeyvatGuide",
  "type": "module",
  "scripts": {
    "lint:check": "eslint .",
    "lint:fix": "eslint . --fix",
    "prettier": "prettier --write .",
    "resize": "tsx ./core/utils/resizeImages.ts",
    "auto:update": "node --import=tsx --experimental-strip-types --no-warnings ./scripts/updateAll.ts",
    "prepare": "husky",
    "install:amos": "pnpm add github:yuehaiteam/amos-data"
  },
  "engines": {
    "node": ">=22.9.0"
  },
  "lint-staged": {
    "*.ts": "oxlint",
    "*.{ts,json,yml}": "eslint --fix",
    "*.{md,json,yml,ts}": "prettier --write"
  },
  "keywords": [
    "BTMuli",
    "Genshin",
    "Tools"
  ],
  "author": "BTMuli <bt-muli@outlook.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/BTMuli/TGAssistant.git"
  },
  "license": "MIT",
  "homepage": "https://github.com/BTMuli/TGAssistent#readme",
  "bugs": {
    "url": "https://github.com/BTMuli/TGAssistent/issues"
  },
  "dependencies": {
    "@yuehaiteam/amos-data": "github:yuehaiteam/amos-data",
    "app-root-path": "^3.1.0",
    "axios": "^1.7.7",
    "better-sqlite3": "^11.5.0",
    "chalk": "^5.3.0",
    "cheerio": "1.0.0",
    "fs-extra": "^11.2.0",
    "geetest": "^4.1.2",
    "image-size": "^1.1.1",
    "js-md5": "^0.8.3",
    "log4js": "^6.9.1",
    "sharp": "^0.33.5",
    "uuid": "^11.0.3",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/better-sqlite3": "^7.6.11",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22.9.0",
    "@types/uuid": "^10.0.0",
    "@types/yamljs": "^0.2.34",
    "eslint": "^9.15.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsonc": "^2.18.2",
    "eslint-plugin-yml": "^1.15.0",
    "husky": "^9.1.7",
    "jsonc-eslint-parser": "^2.4.0",
    "lint-staged": "^15.2.10",
    "oxlint": "^0.11.1",
    "prettier": "^3.3.3",
    "tsx": "^4.19.2",
    "typescript-eslint": "8.15.0",
    "vitest": "^2.1.5",
    "yaml-eslint-parser": "^1.2.3"
  }
}
