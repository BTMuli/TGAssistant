{
  "name": "tg-assistant",
  "version": "2.3.0",
  "description": "The assistant for TeyvatGuide",
  "type": "module",
  "packageManager": "pnpm@10.12.3",
  "scripts": {
    "lint:check": "eslint .",
    "lint:fix": "eslint . --fix",
    "prettier": "prettier --write .",
    "resize": "tsx ./core/utils/resizeImages.ts",
    "auto:update": "node --import=tsx --experimental-strip-types --no-warnings ./scripts/updateAll.ts",
    "prepare": "husky",
    "install:amos": "pnpm add github:yuehaiteam/amos-data"
  },
  "engines": {
    "node": ">=22.9.0"
  },
  "lint-staged": {
    "*.ts": "oxlint",
    "*.{ts,json,yml}": "eslint --fix",
    "*.{md,json,yml,ts}": "prettier --write"
  },
  "keywords": [
    "BTMuli",
    "Genshin",
    "Tools"
  ],
  "author": "BTMuli <bt-muli@outlook.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/BTMuli/TGAssistant.git"
  },
  "license": "MIT",
  "homepage": "https://github.com/BTMuli/TGAssistent#readme",
  "bugs": {
    "url": "https://github.com/BTMuli/TGAssistent/issues"
  },
  "dependencies": {
    "@yuehaiteam/amos-data": "github:yuehaiteam/amos-data",
    "app-root-path": "^3.1.0",
    "axios": "^1.10.0",
    "better-sqlite3": "^12.1.0",
    "chalk": "^5.4.1",
    "fs-extra": "^11.3.0",
    "geetest": "^4.1.2",
    "image-size": "^2.0.2",
    "js-md5": "^0.8.3",
    "log4js": "^6.9.1",
    "sharp": "^0.34.2",
    "uuid": "^11.1.0",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@jest/globals": "^30.0.3",
    "@types/better-sqlite3": "^7.6.13",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^24.0.4",
    "@types/uuid": "^10.0.0",
    "@types/yamljs": "^0.2.34",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsonc": "^2.20.1",
    "eslint-plugin-yml": "^1.18.0",
    "husky": "^9.1.7",
    "jsonc-eslint-parser": "^2.4.0",
    "lint-staged": "^16.1.2",
    "oxlint": "^1.3.0",
    "prettier": "^3.6.0",
    "tsx": "^4.20.3",
    "typescript-eslint": "8.35.0",
    "vitest": "^3.2.4",
    "yaml-eslint-parser": "^1.3.0"
  }
}
